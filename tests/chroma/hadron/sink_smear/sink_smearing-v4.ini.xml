<?xml version="1.0"?>
<chroma>
<annotation>
Sink smear a prop
</annotation>
<Param> 
  <InlineMeasurements>

    <elem>
      <Name>MAKE_SOURCE</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>5</version>
        <wave_state>S_WAVE</wave_state>
        <source_type>SHELL_SOURCE</source_type>
        <j_decay>3</j_decay>
        <direction>2</direction>
        <t_source>0 0 0 0</t_source>

        <ShellSource>
          <SourceSmearingParam>
            <wvf_kind>GAUGE_INV_GAUSSIAN</wvf_kind>
            <wvf_param>2.0</wvf_param>
            <wvfIntPar>5</wvfIntPar>
          </SourceSmearingParam>
          <laplace_power>0</laplace_power>
          <link_smear_fact>2.5</link_smear_fact>
          <link_smear_num>0</link_smear_num>
          <disp_length>0</disp_length>
          <disp_dir>0</disp_dir>
        </ShellSource>

        <nrow>4 4 4 8</nrow>
      </Param>
      <NamedObject>
        <source_id>sh_source_0</source_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>PROPAGATOR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>8</version>
        <nonRelProp>false</nonRelProp>
        <obsvP>false</obsvP>
        <FermionAction>
         <FermAct>WILSON</FermAct>
         <Kappa>0.11</Kappa>
         <AnisoParam>
           <anisoP>false</anisoP>
           <t_dir>3</t_dir>
           <xi_0>1.0</xi_0>
           <nu>1.0</nu>
         </AnisoParam>
         <FermionBC>
           <FermBC>SIMPLE_FERMBC</FermBC>
           <boundary>1 1 1 0</boundary>
         </FermionBC>
        </FermionAction>
        <InvertParam>
          <invType>CG_INVERTER</invType>
          <RsdCG>1.0e-12</RsdCG>
          <MaxCG>1000</MaxCG>
        </InvertParam>
        <nrow>4 4 4 8</nrow>
      </Param>
      <NamedObject>
        <source_id>sh_source_0</source_id>
        <prop_id>sh_prop_0</prop_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>SINK_SMEAR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>4</version>
        <wave_state>S_WAVE</wave_state>
        <sink_type>POINT_SINK</sink_type>
        <nrow>4 4 4 8</nrow>
      </Param>
      <NamedObject>
        <prop_id>sh_prop_0</prop_id>
        <smeared_prop_id>sh_pt_prop_0</smeared_prop_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>SINK_SMEAR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>4</version>
        <wave_state>S_WAVE</wave_state>
        <sink_type>SHELL_SINK</sink_type>
        <direction>2</direction>

        <ShellSink>
          <SinkSmearingParam>
            <wvf_kind>GAUGE_INV_GAUSSIAN</wvf_kind>
            <wvf_param>4.5</wvf_param>
            <wvfIntPar>5</wvfIntPar>
          </SinkSmearingParam>
          <laplace_power>0</laplace_power>
          <link_smear_fact>2.5</link_smear_fact>
          <link_smear_num>0</link_smear_num>
          <disp_length>0</disp_length>
          <disp_dir>0</disp_dir>
        </ShellSink>

        <nrow>4 4 4 8</nrow>
      </Param>
      <NamedObject>
        <prop_id>sh_prop_0</prop_id>
        <smeared_prop_id>sh_sh_prop_0</smeared_prop_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>QIO_WRITE_NAMED_OBJECT</Name>
      <Frequency>1</Frequency>
      <NamedObject>
        <object_id>sh_sh_prop_0</object_id>
        <object_type>LatticePropagator</object_type>
      </NamedObject>
      <File>
        <file_name>./sh_sh_prop_0</file_name>
        <file_volfmt>MULTIFILE</file_volfmt>
      </File>
    </elem>

  </InlineMeasurements>
   <nrow>4 4 4 8</nrow>
</Param>
<Cfg>
 <cfg_type>SZIN</cfg_type>
 <cfg_file>../../../../test_purgaug.cfg1</cfg_file>
